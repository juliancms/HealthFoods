<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/saleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openInvoice"
        android:text="TextView" />

    <TextView
        android:id="@+id/saleCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="openInvoice"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/saleID"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/saleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:onClick="openInvoice"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/saleDate"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/saleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:onClick="openInvoice"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/saleTotal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/saleTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:onClick="openInvoice"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>