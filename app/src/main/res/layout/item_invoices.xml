<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/saleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openInvoice"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/saleCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="openInvoice"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/saleID"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/saleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="openInvoice"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/saleDate"
        app:layout_constraintTop_toBottomOf="@+id/saleID"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/saleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openInvoice"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saleID"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/saleTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="openInvoice"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/saleType"
        app:layout_constraintTop_toBottomOf="@+id/saleID"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>