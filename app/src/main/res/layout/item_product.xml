<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cLayout">

    <TextView
        android:id="@+id/productADescription"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textAppearance="@style/BB_BottomBarItem_Fixed.TitleAppearance"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/productQuantity"
        android:layout_width="8dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/productID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:layout_weight="0"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/productTax"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:layout_weight="0"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/productUM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/add_product" />

    <Button
        android:id="@+id/add_product"
        android:layout_width="12dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:onClick="onClickProduct"
        android:text="@string/add"
        android:textAlignment="center"
        android:textSize="10sp" />


</LinearLayout>