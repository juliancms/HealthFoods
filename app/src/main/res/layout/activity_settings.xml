<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juliancms.healthfoods.SettingsActivity">

    <TextView
        android:id="@+id/file_tblproducts"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/import_products"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="95dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/edit_tblproducts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/import_products"
        app:layout_constraintStart_toStartOf="@+id/file_tblproducts"
        app:layout_constraintTop_toBottomOf="@+id/file_tblproducts" />

    <TextView
        android:id="@+id/file_tblcustomers"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/import_customers"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintTop_toBottomOf="@+id/edit_tblproducts"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/edit_tblcustomers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/import_customers"
        app:layout_constraintTop_toBottomOf="@+id/file_tblcustomers"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/file_tblinvoices"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintTop_toBottomOf="@+id/edit_tblcustomers"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/edit_tblinvoices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/export_invoices"
        app:layout_constraintTop_toBottomOf="@+id/file_tblinvoices"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
